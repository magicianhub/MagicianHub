<ContentDialog x:Class="MagicianHub.Views.TwoFactorAuthModeDialog"
               xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
               xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
               xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
               xmlns:local="using:MagicianHub.Views"
               xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
               Title="Two-factor authentication"
               PrimaryButtonClick="ContentDialog_PrimaryButtonClick"
               PrimaryButtonText="Continue"
               SecondaryButtonClick="ContentDialog_SecondaryButtonClick"
               SecondaryButtonText="Cancel"
               mc:Ignorable="d">
    <StackPanel HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch">
        <TextBlock Text="Choose an authentication method that suits you best"
                   TextWrapping="WrapWholeWords" />
        <ComboBox Margin="0,10,0,0"
                  HorizontalAlignment="Stretch"
                  SelectedIndex="0">
            <ComboBoxItem Content="via authentication app" />
            <ComboBoxItem Content="via phone number" />
        </ComboBox>
    </StackPanel>
</ContentDialog>
