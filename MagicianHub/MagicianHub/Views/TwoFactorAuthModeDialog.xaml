<ContentDialog x:Class="MagicianHub.Views.TwoFactorAuthModeDialog"
               xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
               xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
               xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
               xmlns:local="using:MagicianHub.Views"
               xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
               x:Uid="AuthDialog"
               Title="Two-factor authentication"
               DataContext="{Binding TwoFactorAuthModeDialogViewModel, Source={StaticResource Locator}}"
               DefaultButton="Primary"
               PrimaryButtonCommand="{Binding ContinueCommand}"
               PrimaryButtonText="Continue"
               SecondaryButtonCommand="{Binding CancelCommand}"
               SecondaryButtonText="Cancel"
               mc:Ignorable="d">
    <StackPanel HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch">
        <TextBlock x:Uid="AuthDialogTextBlock"
                   Text="Choose an authentication method that suits you best"
                   TextWrapping="WrapWholeWords" />
        <ComboBox Margin="0,10,0,0"
                  HorizontalAlignment="Stretch"
                  ItemsSource="{Binding VerifyMethods}"
                  SelectedIndex="{Binding SelectedVerifyMode, Mode=TwoWay}" />
    </StackPanel>
</ContentDialog>
